<Window x:Class="Kanstraction.Views.AddBuildingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource AddBuildingDialog_Title}"
        Width="520" Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource AddBuildingDialog_NewBuilding}" FontSize="16" FontWeight="SemiBold"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource AddBuildingDialog_Code}" Width="110" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtCode"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource AddBuildingDialog_CodeHint}"
                 Padding="10" FontSize="14"/>
            </DockPanel>

            <DockPanel>
                <TextBlock Text="{DynamicResource AddBuildingDialog_BuildingType}" Width="110" VerticalAlignment="Center"/>
                <ComboBox x:Name="CboType"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  Padding="6" FontSize="14" Width="320"/>
            </DockPanel>

            <TextBlock Text="{DynamicResource AddBuildingDialog_StageInfo}"
                 Margin="0,8,0,0"
                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource Common_Create}" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Create_Click"/>
            <Button Content="{DynamicResource Common_Cancel}" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
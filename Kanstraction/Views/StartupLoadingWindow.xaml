<Window x:Class="Kanstraction.Views.StartupLoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kanstraction"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="ToolWindow"
        Background="#F5F5F5">
    <Border Padding="24" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Kanstraction"
                       FontSize="20"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12" />
            <ProgressBar IsIndeterminate="True"
                         Height="4"
                         Margin="0,0,0,16" />
            <TextBlock x:Name="StatusTextBlock"
                       Text="Initialisation de l'application..."
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="320" />
        </StackPanel>
    </Border>
</Window>

<Window x:Class="Kanstraction.Views.AddMaterialToSubStageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Material"
        Width="520" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add Material to Sub-stage" FontSize="16" FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="Material" Width="110" VerticalAlignment="Center"/>
                <ComboBox x:Name="CboMaterial"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="Name" SelectedValuePath="Id"
                  Padding="6" FontSize="14" Width="320"
                  SelectionChanged="CboMaterial_SelectionChanged"/>
            </DockPanel>

            <DockPanel>
                <TextBlock Text="Quantity" Width="110" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="TxtQty"
                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                   materialDesign:HintAssist.Hint="Qty (>= 0)"
                   Padding="10" FontSize="14" Width="140" />
                    <TextBlock x:Name="TxtUnit"
                     Margin="8,0,0,0"
                     VerticalAlignment="Center"
                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Add_Click"/>
            <Button Content="Cancel" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
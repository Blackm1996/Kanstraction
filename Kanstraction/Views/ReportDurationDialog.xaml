<Window x:Class="Kanstraction.Views.ReportDurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource ProgressReport_DurationDialogTitle}"
        Width="360"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <StackPanel Margin="16" VerticalAlignment="Stretch">
        <TextBlock Text="{DynamicResource ProgressReport_DurationLabel}"
                   FontWeight="SemiBold"/>

        <ComboBox x:Name="DurationCombo"
                  Margin="0,8,0,0"
                  DisplayMemberPath="Label"
                  SelectedValuePath="Label"
                  SelectionChanged="DurationCombo_SelectionChanged"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

        <Grid Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{DynamicResource ProgressReport_StartDate}" VerticalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        IsEnabled="False"/>
        </Grid>

        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{DynamicResource ProgressReport_EndDate}" VerticalAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        SelectedDateChanged="EndDatePicker_SelectedDateChanged"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="{DynamicResource Common_Cancel}"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="{DynamicResource Common_OK}"
                    Width="120"
                    Background="#3f51b5"
                    Foreground="White"
                    Click="Confirm_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

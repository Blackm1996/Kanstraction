<Window x:Class="Kanstraction.Views.AddSubStageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource AddSubStageDialog_Title}"
        Width="520" Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource AddSubStageDialog_Header}" FontSize="16" FontWeight="SemiBold"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource AddSubStageDialog_Name}" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtName"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource AddSubStageDialog_NameHint}"
                 Padding="10" FontSize="14"/>
            </DockPanel>

            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource AddSubStageDialog_LaborCost}" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtLabor"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource AddSubStageDialog_LaborCostHint}"
                 Padding="10" FontSize="14"/>
            </DockPanel>

            <!-- Order controls -->
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource AddSubStageDialog_Order}" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtOrder"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="{DynamicResource AddSubStageDialog_OrderHint}"
                 Padding="10" FontSize="14" Width="120" IsEnabled="False"/>
                <TextBlock x:Name="LblOrderHelp" Margin="8,0,0,0" VerticalAlignment="Center"
                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </DockPanel>

            <CheckBox x:Name="ChkAddAtEnd"
                Content="{DynamicResource AddSubStageDialog_AddAtEnd}"
                IsChecked="True"
                Checked="ChkAddAtEnd_Checked"
                Unchecked="ChkAddAtEnd_Unchecked"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource Common_Create}" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Create_Click"/>
            <Button Content="{DynamicResource Common_Cancel}" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>